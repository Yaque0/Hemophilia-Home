  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "types": ["node", "vite/client"]
  },
  "include": ["vite.config.ts", "src/**/*.ts"]
}